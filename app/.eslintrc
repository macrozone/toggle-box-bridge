{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "globalReturn": true,
      "jsx": true
    }
  },

  "parser": "babel-eslint",
  "plugins": [
    "meteor",
    "react"
  ],
  "extends": [
    "airbnb",
    "plugin:meteor/recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "server": false,
    "browser": false,
    "expect": false,
    "faker": true
  },
  "rules": {
    "arrow-body-style": [1, "as-needed"],
    "no-unused-vars": ["warn"],
    "react/prop-types": ["warn"],
    "react/display-name": ["warn"],
    "max-len": ["error", 250],
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Seed",
          "LocaleRoutes",
          "I18nService",
          "C",
          "Maybe",
          "ReactiveAggregate"
        ]
      }
    ],
    "import/no-unresolved": 0,
    "import/no-absolute-path": 0,
    "no-extraneous-dependencies": 0,
    "import/extensions": 0,
    "import/imports-first": 0,
    "no-underscore-dangle": 0,
    "prefer-arrow-callback": 0,
    "func-names": 0,
    "react/jsx-filename-extension": 0
  }
}